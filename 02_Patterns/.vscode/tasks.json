{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run C++ (single)",
      "type": "shell",
      "command": "g++ -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/C"]
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
